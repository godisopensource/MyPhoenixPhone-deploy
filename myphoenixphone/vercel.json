{
  "version": 2,
  "builds": [
    { "src": "apps/web/package.json", "use": "@vercel/next" },
    {
      "src": "apps/backend/api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "apps/backend/node_modules/.prisma/**",
          "apps/backend/prisma/**"
        ],
        "runtime": "nodejs20.x",
        "memory": 1024,
        "maxDuration": 10
      }
    }
  ],
  "routes": [
    { "src": "/api", "dest": "apps/backend/api/index.ts" },
    { "src": "/api/(.*)", "dest": "apps/backend/api/index.ts" },
    { "src": "/(.*)", "dest": "apps/web/$1" }
  ]
}
