{
  "version": 2,
  "installCommand": "bash -lc 'npm install --include=dev && npx prisma generate --schema apps/backend/prisma/schema.prisma'",
  "builds": [
    { "src": "apps/web/package.json", "use": "@vercel/next" },
    {
      "src": "api/mcp-proxy.js",
      "use": "@vercel/node",
      "config": { "runtime": "nodejs20.x", "memory": 128, "maxDuration": 10 }
    },
    {
      "src": "apps/backend/api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "apps/backend/prisma/**",
          "apps/backend/node_modules/.prisma/**",
          "apps/backend/node_modules/@prisma/**",
          "node_modules/.prisma/**",
          "node_modules/@prisma/**",
          "apps/backend/node_modules/swagger-ui-dist/**",
          "node_modules/swagger-ui-dist/**"
        ],
        "runtime": "nodejs20.x",
        "memory": 1024,
        "maxDuration": 10
      }
    }
  ],
  "routes": [
    { "src": "/mcp-proxy", "dest": "api/mcp-proxy.js" },
    { "src": "/api/mcp-proxy", "dest": "api/mcp-proxy.js" },
    { "src": "/docs", "dest": "apps/backend/api/index.ts" },
    { "src": "/docs/(.*)", "dest": "apps/backend/api/index.ts" },
    { "src": "/docs-json", "dest": "apps/backend/api/index.ts" },
    { "src": "/api-json", "dest": "apps/backend/api/index.ts" },
    { "src": "/api", "dest": "apps/backend/api/index.ts" },
    { "src": "/api/(.*)", "dest": "apps/backend/api/index.ts" },
    { "src": "/(.*)", "dest": "apps/web/$1" }
  ]
}
